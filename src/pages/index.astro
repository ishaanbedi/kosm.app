---
import Layout from "../layouts/Layout.astro";
import black from "../assets/black.svg";
import frame from "../assets/d00b3d67-976e-4be8-bfe4-03b7c1828870.png";
import Navbar from "../components/Navbar.astro";
---

<Layout>
	<section>
		<Navbar showBackArr={false} />
		<div
			class="flex flex-col items-center justify-center h-screen space-y-8 overflow-hidden"
		>
			<div>
				<h1 class="text-5xl font-[900] text-center">Kosm</h1>
				<h2>Breathing Companion</h2>
			</div>
			<div>
				<a
					href="https://apple.co/3DNnXHA"
					target="_blank"
					rel="noopener"
				>
					<img src={black.src} alt="" />
				</a>
			</div>
			<div class="h-[20rem] pt-4">
				<img class="h-[44rem]" src={frame.src} alt="" />
			</div>
		</div>
	</section>
</Layout>
